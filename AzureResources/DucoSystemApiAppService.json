{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "allowedValues": [
                "dev",
                "tst"
            ],
            "defaultValue": "dev"
        }
    },
    "variables": {
        "appServicePlanName": "[concat('codit-', parameters('environment'), '-we-sharedaccesskeyplan')]",
        "appServiceName": "[concat('codit-', parameters('environment'), '-we-sharedaccesskeyexample-api')]",
        "resourceGroupName": "[concat('codit-', parameters('environment'), '-sharedaccesskey')]"        
    },
    "resources": [        
        {
            "type": "Microsoft.Web/sites",
            "location": "[resourceGroup().location]",
            "name": "[variables('ducoSystemAppServiceName')]",
            "apiVersion": "2016-03-01",
            "kind": "api",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "name": "[variables('ducoSystemAppServiceName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
                "siteConfig": {
                    "appSettings": [
                        
                        {
                            "name": "MSDEPLOY_RENAME_LOCKED_FILES",
                            "value": "1"
                        },
                        {
                            "name": "WEBSITE_RUN_FROM_PACKAGE",
                            "value": "1"
                        }                        
                    ],
                    "alwaysOn": true
                }
            },
            "dependsOn": []
        }
    ],
    "outputs": {
        "DucoSystem.Api.PrincipalId": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Web/sites/', variables('ducoSystemAppServiceName')), '2018-02-01', 'Full').identity.principalId]"
        },
        "DucoSystem.Api.Url": {
            "type": "string",            
            "value": "[concat('https://', first(reference(resourceId('Microsoft.Web/sites', variables('ducoSystemAppServiceName')), '2016-08-01').hostNames))]"
        }
    }
}